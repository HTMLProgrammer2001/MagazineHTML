                .product__order
                    .product__quantity
                        b.product__quantity-head Quantity
                        input(type='number').product__quantity-count

                    .product__actions
                        .product__like
                            i.fas.fa-heart

                        .product__add Add to cart

                .product__categories
                    b Categories:
                    span.ml-1 Fashion, Men clothes

                .product__categories
                    b Tags:
                    span.ml-1 Fashion, Men clothes
