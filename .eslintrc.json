{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-cond-assign": [
          "error",
          "always"
        ],
        "no-console": "warn",
        "accessor-pairs": "error",
        "curly": "warn",
        "block-scoped-var": "warn",
        "complexity": [
          "error",
          5
        ],
        "no-eval": "error",
        "no-empty-function": "warn",
        "no-implied-eval": "error",
        "no-invalid-this": "warn",
        "no-multi-spaces": "error",
        "no-return-await": "error",
        "no-sequences": "warn"
    }
}